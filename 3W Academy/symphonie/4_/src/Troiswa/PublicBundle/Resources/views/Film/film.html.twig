{% extends 'TroiswaPublicBundle::layout.html.twig' %}

{% block content %}

    
    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">{{ film.titre|capitalize }}
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('troiswa_public_homepage') }}">Home</a>
                    </li>
                    <li><a href="{{ path('troiswa_public_films') }}">Films</a>
                    </li>
                    <li class="active">{{ film.titre|capitalize }}</li>
                </ol>
            </div>

        </div>

        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive" src="http://placehold.it/750x500">
            </div>

            <div class="col-md-4">
                <div class="raty"></div>
                <h3>Histoire</h3>
                <p>{{ film.description }}</p>
                <p>Date de sortie : {{ film.dateCreation|date('d-m-Y') }}</p>
                <h3>Informations</h3>
                <ul>
                    <li>Note : <div id="note" data-score="{{ film.spectateur }}"></div></li>
                </ul>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Les acteurs</h3>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

            <div class="col-sm-3 col-xs-6">
                <a href="#">
                    <img class="img-responsive img-customer" src="http://placehold.it/500x300">
                </a>
            </div>

        </div>

    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/lib/jquery.raty.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function()
        {
            $('#note').raty({
                path: '{{ app.request.basePath }}/js/lib/images',
                readOnly: true,
                score: function() {
                    return $(this).attr('data-score');
                }
            });
        });
    </script>
{% endblock %}