{% extends 'TroiswaPublicBundle::layout.html.twig' %}

{% block content %}


        

    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Les acteurs
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('troiswa_public_homepage') }}">Home</a>
                    </li>
                    <li>Acteurs</li>
                </ol>
            </div>

        </div>
        <!-- /.row -->

        <div class="row">

        {% for acteur in acteurs %}
            <div class="col-md-4 portfolio-item">
                <a href="{{ path('troiswa_public_acteur', { 'id' : acteur.id } ) }}">
                    <img class="img-responsive" src="http://placehold.it/700x400">
                </a>
                <h3><a href="{{ path('troiswa_public_acteur', { 'id' : acteur.id } ) }}">{{ acteur.prenom ~ ' ' ~ acteur.nom }}</a>
                </h3>
                <p>{{ acteur.shortBiographie }}</p>
            </div>
        {% endfor %}

        </div>



        </div>

        <div class="row text-center">

            <div class="col-lg-12">
                <ul class="pagination">
